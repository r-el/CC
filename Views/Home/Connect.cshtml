@model CaloriesCounter.ViewModel.VMUser

@{
    ViewData["Title"] = "התחבר";
}

<h1>התחברות</h1>

<h4>התחבר</h4>
<hr />
<div class="row row-cols-2">
    <h5 class="m-2"><a class="btn btn-primary text-white" onclick="ShowConnect()">התחבר</a></h5>
    <h5 class="m-2"><a class="btn btn-primary text-white" onclick="ShowNewUser()">הירשם</a></h5>
</div>

@*התחברות*@
<div class="row" id="connect">
    <div class="col-md-4">
        <form asp-action="Connect">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*אימייל*@
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            @*סיסמא*@
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="התחבר" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*יצירת חשבון*@
<div class="row" id="NewUser" style="display:none">
    <div class="col-md-4">
        <form asp-action="NewUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*שם פרטי*@
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label"></label>
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            @*משפחה*@
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"></label>
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            @*אימייל*@
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            @*סיסמא*@
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            @*תאריך לידה*@
            <div class="form-group">
                <label asp-for="User.BirthOfDate" class="control-label"></label>
                <input asp-for="User.BirthOfDate" class="form-control" />
                <span asp-validation-for="User.BirthOfDate" class="text-danger"></span>
            </div>
            @*משקל*@
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="צור" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">חזרה לרשימה</a>
</div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
