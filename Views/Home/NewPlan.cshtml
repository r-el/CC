@model CaloriesCounter.ViewModel.VMNewPlan
@{ ViewData["Title"] = "תכנית חדשה"; }

<h1>שלום @Model.User.FullName</h1>

<h4>תכנית חדשה</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewPlan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserID" hidden="hidden" />
            <div class="form-group">
                <label asp-for="Meal.TypeID" class="control-label"></label>
                <select asp-for="Meal.TypeID" class="form-control" >
                    @foreach (TypeOfMeal type in Model.Types)
                    {
                        <option value="@type.ID">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="Meal.TypeID" class="text-danger"></span>
            </div>
            @*// להוסיף כאן "הוספת ארוחה, הוספת מאכל"
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <select asp-for=""></select>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="הוסף" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div> <a asp-action="Index">חזרה לרשימה</a> </div>
@section Scripts { @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} }
